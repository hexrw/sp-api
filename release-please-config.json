{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "release-type": "node",
    "include-component-in-tag": false,
    "pull-request-header": "chore: release",
    "packages": {
        "packages/models": {
            "component": "models",
            "package-name": "@selling-partner-api/models",
            "tag-template": "models-v${version}",
            "changelog-path": "CHANGELOG.md"
        },
        "packages/sdk": {
            "component": "sdk",
            "package-name": "@selling-partner-api/sdk",
            "tag-template": "sdk-v${version}",
            "changelog-path": "CHANGELOG.md",
            "prerelease": true,
            "prerelease-type": "beta"
        }
    }
}