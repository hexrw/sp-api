{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "release-type": "node",
    "include-component-in-tag": true,
    "separate-pull-requests": false,
    "pull-request-title-pattern": "release ${component}@${version}",
    "pull-request-header": ":rocket: Preparing @selling-partner-api/${component}@${version}",
    "pull-request-footer": "Merge once you're ready to ship @selling-partner-api/${component}@${version}.",
    "label": "release: pending",
    "release-label": "release: tagged",
    "packages": {
        "packages/models": {
            "component": "models",
            "package-name": "@selling-partner-api/models",
            "tag-template": "@selling-partner-api/models@${version}",
            "changelog-path": "CHANGELOG.md",
            "extra-files": [
                {
                    "type": "json",
                    "path": "packages/sdk/package.json",
                    "jsonpath": "$.dependencies['@selling-partner-api/models']"
                }
            ]
        },
        "packages/sdk": {
            "component": "sdk",
            "package-name": "@selling-partner-api/sdk",
            "tag-template": "@selling-partner-api/sdk@${version}",
            "changelog-path": "CHANGELOG.md",
            "prerelease": true,
            "prerelease-type": "beta"
        }
    }
}