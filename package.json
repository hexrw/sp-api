{
    "name": "selling-partner-api",
    "type": "module",
    "private": true,
    "packageManager": "bun@1.2.23",
    "workspaces": [
        "packages/*",
        "docs"
    ],
    "engines": {
        "bun": ">=1.2.0",
        "node": ">=22.0.0"
    },
    "scripts": {
        "lint": "bun run lint:biome && bun run lint:types",
        "lint:biome": "bunx biome lint --reporter summary package.json biome.json tsconfig.json docs packages/sdk/src packages/sdk/scripts packages/models/scripts",
        "lint:fix": "bunx biome lint --write package.json biome.json tsconfig.json docs packages/sdk/src packages/sdk/scripts packages/models/scripts",
        "lint:types": "bun run --cwd packages/sdk typecheck",
        "format": "bunx biome format .",
        "format:fix": "bunx biome format --write .",
        "build": "bun run --cwd packages/models build && bun run --cwd packages/sdk build",
        "build:models": "bun run --cwd packages/models build",
        "build:sdk": "bun run --cwd packages/sdk build",
        "test": "bunx vitest",
        "docs:dev": "bun run --cwd docs dev",
        "docs:build": "bun run --cwd docs build",
        "docs:preview": "bun run --cwd docs preview",
        "prepare": "husky"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.5",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@vitest/coverage-v8": "^2.1.3",
        "bun-types": "latest",
        "husky": "^9.1.7",
        "vitest": "^4.0.1"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}